[
  {
    "label": "Rebuild Tofu environment",
    "command": "tofu destroy && tofu apply -auto-approve -target=module.baremetal",
    "cwd": "$ZED_WORKTREE_ROOT/terraform",
    "shell": "system"
  }, {
    "label": "Run Ansible playbook",
    "command": "ansible-playbook deploy.yaml",
    "cwd": "$ZED_WORKTREE_ROOT/ansible",
    "shell": "system"
  }
]
